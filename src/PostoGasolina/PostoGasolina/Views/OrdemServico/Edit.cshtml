@model PostoGasolina.Models.OrdemServico

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <h6>Valor do Litro</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ValorLitro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ValorLitro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Data da Ordem</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataOrdem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DataOrdem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Combustivel Gasto</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.QtdCombustivel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.QtdCombustivel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Motorista</h6>
            <div class="col-md-10">
                @Html.DropDownList("IdMotorista", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdMotorista, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Posto</h6>
            <div class="col-md-10">
                @Html.DropDownList("idPosto", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idPosto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-3">
                <input type="submit" value="Save" class="btn btn-outline-success" /> |
                <a class="btn btn-outline-primary " href="/OrdemServico/Index">Voltar</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
