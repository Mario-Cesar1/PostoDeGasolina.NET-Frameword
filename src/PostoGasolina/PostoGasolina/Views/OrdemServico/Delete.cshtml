@model PostoGasolina.Models.OrdemServico

@{
    ViewBag.Title = "Delete";
}

<h2>Excluir</h2>

<h3>Tem certeza que deseja excluir isso?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <h6>Valor do Litro</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorLitro)
        </dd>

        <dt>
            <h6>Data da Ordem</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataOrdem)
        </dd>

        <dt>
            <h6>Combustivel Gasto</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QtdCombustivel)
        </dd>

        <dt>
            <h6>Motorista</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Motorista.Nome)
        </dd>

        <dt>
            <h6>Posto</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Posto.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
            <a class="btn btn-outline-primary " href="/OrdemServico/Index">Voltar</a>
        </div>
    }
</div>
