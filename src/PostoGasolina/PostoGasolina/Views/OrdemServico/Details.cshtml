@model PostoGasolina.Models.OrdemServico

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes</h2>

<div>
    <h4>OrdemServico</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <h6>Valor do Litro</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorLitro)
        </dd>

        <dt>
            <h6>Data da Ordem</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataOrdem)
        </dd>

        <dt>
            <h6>Combustivel Gasto</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QtdCombustivel)
        </dd>

        <dt>
            <h6>Motorista</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Motorista.Nome)
        </dd>

        <dt>
            <h6>Posto</h6>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Posto.Nome)
        </dd>

    </dl>
</div>
<p>
    <button class="btn btn-outline-warning">
        @Html.ActionLink("Editar", "Edit", new { id = Model.id })
    </button>
    |
    <button class="btn btn-outline-primary">
        @Html.ActionLink("Voltar", "Index")
    </button>
</p>
